<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/searchlocation2"
    tools:context=".MainActivity">

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="#000000"-->
        <!--android:alpha="0.2"/>-->

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textViewCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="144dp"
            android:layout_marginEnd="292dp"
            android:fontFamily="@font/lato"
            android:text="Country"
            android:textColor="#FFFFFF"
            android:textSize="9.5pt"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewCountry"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="46dp"
            android:background="#FFFFFF"
            android:completionThreshold="1"
            android:padding="10dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCountry" />

        <TextView
            android:id="@+id/textViewCityProvince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="222dp"
            android:fontFamily="@font/lato"
            android:text="City/ Province"
            android:textColor="#FFFFFF"
            android:textSize="9.5pt"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewCountry" />


        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewCity"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="46dp"
            android:background="#FFFFFF"
            android:completionThreshold="1"
            android:padding="10dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCityProvince" />


        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="126dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:text="Search"
            android:textColor="#757575"
            android:textSize="8.5pt"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewCity" />

        <TextView
            android:id="@+id/textViewAddDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="154dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="25dp"
            android:clickable="true"
            android:fontFamily="@font/lato"
            android:text="Can't find your location?"
            android:textColor="#FFFFFF"
            android:textSize="9pt"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonSubmit" />


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
